<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessor"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowModel}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <UniformGrid Columns="1" VerticalAlignment="Top">
                <Button Padding="8" Margin="8" Content="Load Image" Command="{Binding ChooseImageCommand}" />
                <Button Padding="8" Margin="8" Content="Process Image" Command="{Binding ProcessImageCommand}" />
                <ComboBox Name="Effect_Options"
                  Padding="8" Margin="8"
                  ItemsSource="{Binding EffectOptions}"
                  SelectedItem="{Binding SelectedEffectOption, Mode=TwoWay}"
                  SelectedIndex="0" 
                  VerticalContentAlignment="Center"/>

                <Button Padding="8" Margin="8" Content="Save Image" Command="{Binding SaveImageCommand}" />
                <Button Padding="8" Margin="8" Content="Play Animation" Background="ForestGreen" BorderThickness="4" BorderBrush="DarkSlateGray" Command="{Binding PlayAnimationCommand}" IsEnabled="{Binding PlayButtonEnabled}"/>
                <Button Name="StopButton" Padding="8" Margin="8" Content="Stop Animation" Background="Firebrick" BorderThickness="4" BorderBrush="DarkSlateGray" Command="{Binding StopAnimationCommand}" IsEnabled="{Binding StopButtonEnabled}" />
                <Button Padding="8" Margin="8" Content="Reset Image" Background="SandyBrown" BorderThickness="4" BorderBrush="DarkSlateGray" Command="{Binding ResetAnimationCommand}" />
            </UniformGrid>
        </Grid>
        <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"  Width="800" Source="{Binding ImageSource}" />
        <Grid Grid.Column="0" Grid.Row="1">
            <Label Padding="8" Margin="8" HorizontalAlignment="Center" Content="Adjust Animation Speed" />
            <Slider Value="{Binding AnimationSpeed}"  Padding="8" Margin="8, 40" HorizontalAlignment="Center" Width="Auto"
                    Height="150" Orientation="Vertical" Minimum="1" Maximum="10" TickPlacement="TopLeft" TickFrequency="1" IsSnapToTickEnabled="True" />
        </Grid>
    </Grid>
</Window>

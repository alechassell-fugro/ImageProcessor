<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessor"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000"
        d:DataContext="{d:DesignInstance {x:Type local:MainWindowModel}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="1" Grid.Column="0" Content="Load Image" Command="{Binding ChooseImageCommand}" />

        <Button Grid.Row="1" Grid.Column="1" Content="Process Image" Command="{Binding ProcessImageCommand}" />

		<Button Grid.Row="1" Grid.Column="2" Content="Change!" Command="{Binding ChangeImageFilter}" />

        <Image Grid.Row="0" Grid.Column="1" Stretch="Uniform" Source="{Binding ImageSource}" />
    </Grid>
</Window>
